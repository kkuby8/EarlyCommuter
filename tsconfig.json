{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "es2015",
    "types": ["react-native", "jest"],
    "lib": ["ES2015", "DOM"],
    "allowJs": true,
    "jsx": "react-native",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "*": ["./*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
